{
  "name": "developer-sites-in-vscode",
  "displayName": "Developer Sites in VSCode",
  "description": "Open your sites in VSCode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.54.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:developer-sites-in-vscode.openSite"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "developer-sites-in-vscode",
          "title": "VSCode内置网页",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "developer-sites-in-vscode": [
        {
          "id": "package-dependencies",
          "name": "Dependencies"
        }
      ]
    },
    "commands": [
      {
        "command": "developer-sites-in-vscode.openSite",
        "title": "open site demo"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.54.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4",
    "@vscode/test-electron": "^2.1.5"
  }
}
